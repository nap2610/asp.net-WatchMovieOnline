<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie World</title>
    <meta name="title" content="@ViewData["Title"]">
    <meta name="description" content="Movie World is a popular movie app made by Phu Nguyen">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- favicon -->
    <link rel="shortcut icon" href="~/img/FULIX-removebg-preview.png" type="image/svg+xml">
    <!-- gg font link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap" rel="stylesheet">
    <!-- Custom css link-->
    <link rel="stylesheet" href="~/css/site.css">
    <!--custom js link-->
    <script src="~/js/global.js" defer></script>
    <script src="~/js/site.js" type="module"></script>
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <a asp-action="Index" class="logo">
            <img src="~/img/FULIX-removebg-preview.png" width="150" alt="">
        </a>

        <div class="search-box" search-box>
            <div class="search-wrapper" search-wrapper>
                <form asp-action="SearchMovie" method="GET">
                    <input type="text" name="key" aria-label="search movies" placeholder="Search any movies..." class="search-field" autocomplete="off" search-field>
                </form>
                <img src="~/img/search.png" alt="search" width="24" height="24" class="leading-icon">
            </div>

            <button class="search-btn" search-toggler>
                <img src="~/img/close.png" alt="close search box" width="24" height="24">
            </button>
        </div>

        <button class="search-btn" search-toggler menu-close>
            <img src="~/img/search.png" alt="open search box" width="24" height="24">
        </button>

        <button class="menu-btn" menu-tbn menu-toggler>
            <img src="~/img/menu.png" width="24" height="24" alt="open menu" class="menu">
            <img src="~/img/menu-close.png" width="24" height="24" alt="close menu" class="close">
        </button>

    </header>

    <nav class="sidebar" sidebar>
        <div class="sidebar-inner">
            <div class="sidebar-list">

                <p class="title">Genre</p>

                @foreach (var item in ViewBag.genres)
                {
                    <a asp-action="MovieList" asp-route-id="@item.id" class="sidebar-link" menu-close>@item.name</a>
                }
            </div>

            <div class="sidebar-list">

                <p class="title">Language</p>

                <a href="./movie-list.html" menu-close class="sidebar-link">English</a>

                <a href="./movie-list.html" menu-close class="sidebar-link">Vietnamese</a>

            </div>


        </div>
    </nav>


    <div class="overlay" overlay menu-toggler></div>

    <!-- BODY -->
    <article class="container" page-content>

        @RenderBody()



    </article>



</body>
</html>